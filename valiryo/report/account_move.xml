<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_valiryo" inherit_id="account.report_invoice_document">
      <xpath expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[3]/tr[1]/t[1]/td[2]/span[1]" position="attributes">
        <attribute name="t-options-widget">"integer"</attribute>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[3]/tr[1]/t[1]/td[3]/span[1]" position="attributes">
        <attribute name="t-options-widget">"monetary"</attribute>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[3]/tr[1]/t[1]/td[6]/span[1]" position="attributes">
        <attribute name="t-options-widget">"monetary"</attribute>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/p[1]" position="attributes">
        <attribute name="t-if"/>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/t[2]" position="replace"/>
      <xpath expr="/t[1]/t[1]/div[1]/p[3]" position="replace"/>
      <xpath expr="/t[1]/t[1]/div[1]/p[1]" position="replace"/>
      <xpath expr="/t/t/div/div[3]" position="after">
        <div class="row">
          <div class="col h2">
            <span>Terms and Conditions</span>
          </div>
        </div>
      </xpath>
      <xpath expr="/t/t/div/p[3]" position="after">
        <div class="row">
          <div class="col h2">
            <span>Payment mode</span>
          </div>
        </div>
      </xpath>
      <xpath expr="/t/t/div/div[5]" position="after">
        <div class="row">
          <div class="col">
            <span t-field="o.payment_mode_id.note"/>
          </div>
        </div>
      </xpath>
      <xpath expr="/t/t/div/div[6]" position="after">
        <div class="row">
          <div class="col">
            <span>Please use the following communication for your payment: </span>
            <span t-field="o.invoice_origin"/>
          </div>
        </div>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[3]/tr[1]/t[1]/td[5]/span[1]" position="attributes">
        <attribute name="t-esc">line.discount</attribute>
      </xpath>
      <xpath expr="/t/t/div/table/thead/tr/th[3]" position="attributes">
        <attribute name="class" separator=" " add="text-right"/>
      </xpath>
      <xpath expr="/t/t/div/table/thead/tr/th[5]" position="replace">
        <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
          <span>% disc</span>
        </th>
      </xpath>
      <xpath expr="/t/t/div/div[7]" position="after">
        <img class="img-fluid" src="/web/image/1070-9d4f32a7/SelloValiryo.png"/>
      </xpath>
      <xpath expr="/t/t/div/img" position="attributes">
        <attribute name="style" separator=";" width="50" height="25" add="margin-left:100px"/>
      </xpath>
      <xpath expr="/t[1]/t[1]/div[1]/div[1]/div[1]" position="replace"/>
      <xpath expr="/t/t/div/div[1]" position="before">
        <div class="row">
          <div class="col h2">
            <span>Shipping Address</span>
          </div>
        </div>
      </xpath>
      <xpath expr="/t/t/div/div[1]" position="after">
        <div class="row address">
          <div class="col-5">
            <div t-field="o.partner_shipping_id" t-options-widget="'contact'"/>
          </div>
          <div class="col-5 offset-2"/>
        </div>
      </xpath>
      <xpath expr="/t/t/div/h2/span[7]" position="attributes">
        <attribute name="style" separator=";" add="margin-top:50px"/>
      </xpath>
      <xpath expr="/t/t/div/h2" position="attributes">
        <attribute name="style" separator=";" add="margin-top:10px"/>
      </xpath>
      <xpath expr="/t/t/div/h2" position="attributes">
        <attribute name="style" separator=";" add="margin-bottom:10px"/>
      </xpath>
      <xpath expr="/t/t/div/div[3]" position="after">
        <div class="row">
          <div class="col">
            <span>“The exporter of the products covered by this document [customs authorisation No ESEAOR19000018], declares that, except where otherwise clearly indicated, these products are of European Union (Spain) preferential origin”</span>
          </div>
        </div>
      </xpath>
      <xpath expr="/t/t/div/div[4]/div" position="attributes">
        <attribute name="style" separator=";" add="margin-top:10px"/>
      </xpath>
      <xpath expr="/t/t/div/div[4]/div" position="attributes">
        <attribute name="style" separator=";" add="margin-bottom:10px"/>
      </xpath>
    </template>
</odoo>