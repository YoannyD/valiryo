<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
      <xpath expr="/t/t/div/div[2]/div[1]/strong" position="replace">
        <strong>Pedido por:</strong>
      </xpath>
        
      <xpath expr="/t/t/div/table/thead/tr/th[4]/strong" position="replace">
        <strong>(%) disc</strong>
      </xpath>
        
      <xpath expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[4]/span[1]" position="attributes">
        <attribute name="t-field">line.discount</attribute>
      </xpath>
        
      <xpath expr="/t/t/div/div[2]/div[1]/strong" position="replace"><strong>Pedido por:</strong></xpath>

      <xpath expr="/t/t/div/h2[1]" position="attributes">
        <attribute name="style" separator=";" add="margin-top:10px"/>
      </xpath>
        
      <xpath expr="/t/t/div/h2[1]" position="attributes">
        <attribute name="style" separator=";" add="margin-top:15px" remove="margin-top:10px"/>
      </xpath>
        
      <xpath expr="/t/t/div/div[2]/div[1]/strong" position="replace">
        <strong>Requested by:</strong>
      </xpath>
        
      <xpath expr="/t/t/div/h2[3]" position="attributes">
        <attribute name="style" separator=";" add="margin-top:20px"/>
      </xpath>
    </template>
</odoo>